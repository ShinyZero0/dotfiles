# i3 config file (v4)

set $ws1  "1: Browser"
set $ws2  "2: Dev"
set $ws3  "3: Game"
set $ws4  "4: Dev"
set $ws5  "5: Trash"
set $ws6  "6"
set $ws7  "7"
set $ws8  "8"
set $ws9  "9"
set $ws10 "10"

# Autostart

exec --no-startup-id "lxpolkit & sleep 1; dex-autostart --autostart --environment i3"
exec --no-startup-id picom -b
exec --no-startup-id nm-applet
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# AutoWorkspace

exec ~/.scripts/startup-ws.sh

# AutoRestart

exec_always --no-startup-id pkill polybar ; polybar upperbar
exec_always --no-startup-id pkill dunst
exec_always --no-startup-id nitrogen --restore

# Style

font pango: InconsolataLGC Nerd Font Mono Bold 12

for_window [tiling] border pixel 2
for_window [floating] border pixel 1
gaps inner 10

focus_follows_mouse no

# Colors:

set_from_resource $btext    xrdb.color0
set_from_resource $wtext    xrdb.foreground
set_from_resource $active   xrdb.color6
set_from_resource $inactive xrdb.color8
set_from_resource $bground  xrdb.background
set_from_resource $alert    xrdb.color5
set_from_resource $border   xrdb.color6

# Class:                border    backgr.   text   indicator child_border
client.focused          $active   $active   $btext $active   $border
client.focused_inactive $inactive $inactive $wtext $bground  $bground
client.unfocused        $bground  $bground  $wtext $bground  $bground
client.urgent           $bground  $alert    $wtext $alert    $alert
client.placeholder      $btext    $btext    $wtext $bground  $bground

for_window [class="Steam"] move container to workspace $ws5
for_window [class="War Thunder \(Vulkan, 64bit\)"] move container to workspace $ws3
for_window [class="corectrl"] move scratchpad

for_window [class="(?i)todo"]     floating enable
for_window [class="Exaile"]       floating enable resize set 900 600
for_window [class="(?i)avalonia"] floating enable
for_window [class="Lxappearance"] floating enable
for_window [class="Gpick"]        floating enable
for_window [class="Alacarte"]     floating enable
for_window [class="qt5ct"]        floating enable resize set 900 600
for_window [class="Pavucontrol"]  floating enable resize set 640 480
for_window [class="Font-manager"] floating enable resize set 900 600


set $mod Mod4

bindsym $mod+w kill
bindsym mod1+F4 kill

# A more modern dmenu replacement is rofi:
bindsym $mod+Return exec --no-startup-id "rofi  -show-icons -show combi -modes combi -combi-modes drun,run -display-run '' -display-drun ''"
bindsym XF86PowerOff exec "rofi -show power-menu -theme ~/Personalization/powermenu.rasi -modi power-menu:rofi-power-menu"
bindsym $mod+Shift+e exec "rofi -show power-menu -theme ~/Personalization/powermenu.rasi -modi power-menu:rofi-power-menu"

# Screenshots
bindsym Print exec --no-startup-id maim --format=png | tee "$HOME/Images/$(date).png" | xclip -selection clipboard -t image/png

# something
bindsym control+mod1+t exec --no-startup-id kitty
bindsym $mod+s move scratchpad
bindsym $mod+Shift+s scratchpad show
bindsym $mod+p exec --no-startup-id ~/.scripts/togglepavuctl.sh 
bindsym $mod+g exec --no-startup-id ~/.scripts/togglepicom.sh

# switch tabs
bindsym mod1+Tab focus parent; focus right

bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

bindsym $mod+Left  focus left
bindsym $mod+Down  focus down
bindsym $mod+Up    focus up
bindsym $mod+Right focus right
bindsym $mod+a     focus parent
bindsym $mod+d     focus child

bindsym $mod+Shift+j     move left
bindsym $mod+Shift+k     move down
bindsym $mod+Shift+l     move up
bindsym $mod+Shift+colon move right

bindsym $mod+Shift+Left  move left
bindsym $mod+Shift+Down  move down
bindsym $mod+Shift+Up    move up
bindsym $mod+Shift+Right move right

bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+t layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+Shift+space floating toggle
bindsym $mod+f           fullscreen toggle
bindsym $mod+space       focus mode_toggle

# switch to workspace
bindsym $mod+1 workspace number $ws1 
bindsym $mod+2 workspace number $ws2 ; exec --no-startup-id picom -b
bindsym $mod+3 workspace number $ws3 ; exec --no-startup-id pkill picom
bindsym $mod+4 workspace number $ws4 ; exec --no-startup-id picom -b
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

set $refresh_i3status killall -SIGUSR1 i3status
floating_modifier $mod

bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@   +10%   && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@   -10%   && $refresh_i3status
bindsym XF86AudioMute        exec --no-startup-id pactl set-sink-mute   @DEFAULT_SINK@   toggle && $refresh_i3status
bindsym XF86AudioMicMute     exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

bindsym XF86AudioPrev exec --no-startup-id playerctl previous
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause

bindsym $mod+r mode "resize"
mode "resize" {

    bindsym j         resize shrink width  10 px or 10 ppt
    bindsym k         resize grow   height 10 px or 10 ppt
    bindsym l         resize shrink height 10 px or 10 ppt
    bindsym semicolon resize grow   width  10 px or 10 ppt

    # same bindings, but for the arrow keys
    bindsym Left  resize shrink width  10 px or 10 ppt
    bindsym Down  resize grow   height 10 px or 10 ppt
    bindsym Up    resize shrink height 10 px or 10 ppt
    bindsym Right resize grow   width  10 px or 10 ppt

    # back to normal: Enter or Escape or $mod+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}
