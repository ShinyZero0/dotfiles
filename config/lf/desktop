set ratios 1:2:2

set previewer ~/.config/lf/lf_kitty_preview
set cleaner ~/.config/lf/lf_kitty_clean

cmd trash %trash-put $fx
map D trash
map <pgdn> half-down
map <pgup> half-up

map <insert> push $touch<space>
map <f-7> push $mkdir<space>

cmd yankpath &{{
    echo -n $fx | xsel -i -b
}}
map yp yankpath

# vim: ft=bash
