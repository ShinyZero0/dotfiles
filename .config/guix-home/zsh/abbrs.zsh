# vim: ft=sh
abbr yd="yadm enter exec zsh"
abbr winclass="xprop WM_CLASS"
abbr dn="dotnet"

# shortenings
abbr zn="zinit"
abbr vi="nvim"
abbr py="python"
abbr mime="xdg-mime query filetype"
abbr ru="trans en:ru"
abbr en="trans ru:en"
abbr bfg="bfs -L -name"

# sane defaults
abbr duf="duf -only local"
abbr la="ls -A"
abbr ll="ls -lh"
abbr lla="ls -lhA"
abbr grep="grep --color=auto"

# ZSH
abbr r="exec zsh"
abbr edz='$EDITOR ~/.zshrc'

# GIT
abbr ga="git add"
abbr gc="git commit -m"
abbr gd="git diff"
abbr gca="git commit --amend"
abbr gcl="git clone"
abbr gst="git status ."
abbr gch="git checkout"
abbr gds="git diff --staged"
abbr grss="git restore --staged"
abbr grmc="git rm --cached"
