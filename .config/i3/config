# i3 config file (v4)

set $ws1  "1"
set $ws2  "2"
set $ws3  "3"
set $ws4  "4"
set $ws5  "5"
set $ws6  "6"
set $ws7  "7"
set $ws8  "8"
set $ws9  "9"
set $ws10 "10"

# Autostart

# runs runit instead of fucking mess of execs that was there
exec --no-startup-id ~/.scripts/startup.nu
exec --no-startup-id "dex --autostart --environment i3"

exec --no-startup-id "~/.scripts/xsettings.bash"
exec --no-startup-id "xset r rate 250 15"
exec --no-startup-id "nitrogen --restore"

include layout

# Style
font pango: InconsolataLGC Nerd Font Mono Bold 2
for_window [tiling] border pixel 4
for_window [floating] border pixel 1, move position center
gaps inner 10

focus_follows_mouse no

include colors

smart_borders on

for_window [instance="DesktopEditors"] move container to workspace $ws4
for_window [class="libreoffice.*"]     move container to workspace $ws4
for_window [class="(?i)Steam"]             move container to workspace $ws6

for_window [class=".*War Thunder.*"]   move container to workspace $ws3
for_window [class=".*doometernalx64vk.*"]   move container to workspace $ws3
for_window [class="risk of rain 2.exe"]   move container to workspace $ws3

for_window [class="corectrl"]          move scratchpad
for_window [class="(?i)todo"]     floating enable
for_window [class="Lxappearance"] floating enable
for_window [class="Gpick"]        floating enable
for_window [class="Alacarte"]     floating enable
for_window [class="qt5ct"]        floating enable resize set 900 600
for_window [class="Font-manager"] floating enable resize set 900 600
for_window [class="floatwin"]     floating enable resize set 900 600
for_window [instance="nomacs"]    floating enable resize set 900 600
for_window [class="imv"]          floating enable
for_window [instance="floatwin"]  floating enable resize set 900 600
for_window [class="Pavucontrol"]  floating enable resize set 640 480

include keys
include generated
