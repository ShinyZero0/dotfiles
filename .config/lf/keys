# Mappings
source ~/.config/lf/chmod

map R reload
map ; push :
map ` set hidden!
map <esc> push u

# Sort
map s
map sa :{{set sortby atime; set info atime; set reverse; top; }}
map st :{{set sortby time; set info time; set reverse; top; }}
map sc :{{set sortby ctime; set info ctime; set reverse; top; }}
map ss :{{set sortby size; set info size; set reverse; top; }}
map sn :{{set sortby natural; set info; set noreverse; top; }}

# New
map n
map nf push :touch<space>
map nd push :mkdir<space>

# Yank
map y
map yf yankfile
map yy copy
map yl xlinks

map d
map dd cut

# Action
map a
map az push :zip<space>
map ae extract
map as share

# Go to
map gl follow_link
map g/ cd /

map <enter> open
map / fuzzy
map <c-o> jump-prev
map <tab> jump-next

map E ${{
    $EDITOR
}}

map o open-with
# map e ${{
# jaro --method=edit "$fx" || jaro "$fx"
# }}

# vim: ft=bash
