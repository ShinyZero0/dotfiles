set ratios 1:2:2

set previewer ~/.config/lf/lf_kitty_preview
set cleaner ~/.config/lf/lf_kitty_clean

cmd trash %rip $fx
map D trash
map du %rip -u
map <pgdn> half-down
map <pgup> half-up

map <insert> push $touch<space>
map <f-7> push $mkdir<space>
cmd yankfile $xclip -selection clipboard -t $(file --mime-type $f | sed -e 's/.*: //') -i $fx
cmd yankpath &{{
    echo -n $fx | xsel -i -b
}}
map yp yankpath

# vim: ft=bash
